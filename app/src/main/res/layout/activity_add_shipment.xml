<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="dev.shipmentmanagement.AddShipmentActivity">

    <!--todo:add code for display elements-->
    <TextView
        android:id="@+id/AddShipmentTextView1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Add Shipment details :"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#0000ff">
    </TextView>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddShipmentEditText1"
        android:hint="Shipment#"
        android:layout_marginTop="16dp"
        android:inputType="number">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Date :   "
            android:textSize="20sp"
            android:textColor="#000000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-01-2017 "
            android:id="@+id/AddShipmentTextView2"
            android:textSize="18sp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AddShipmentImageButton1"
            android:contentDescription="Button to pick date"
            android:onClick="showDatePickerDialog">
        </ImageButton>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddShipmentEditText3"
        android:hint="Shipped By">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddShipmentEditText4"
        android:hint="Shipped To">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddShipmentEditText5"
        android:hint="Remarks">
    </EditText>

    <Button
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/AddShipmentButton1">
    </Button>

</LinearLayout>
